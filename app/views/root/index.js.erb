

document.write('<ol>');

<% @bikers.each_with_index do |biker,index| -%>
	<% nick = biker[0] -%>
	<% dist = biker[1] -%>
	<% lp = index + 1 -%>
	
	
	<% if lp <= 3 %>
	document.write('<li><b><%= link_to nick, trips_nick_month_path(:month => 5, :nick => nick) -%> # <%= dist -%> km<br></b>');
	<% else %>
	
		<% if lp == 4 %>
			document.write('<br>');
		<% end %>
		
	document.write('<li><%= link_to nick, trips_nick_month_path(:month => 5, :nick => nick) -%> # <%= dist -%> km<br></li>');
	<% end %>
	
<% end -%>
document.write('</ol>');
