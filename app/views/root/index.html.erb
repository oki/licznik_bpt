

<% @bikers.each_with_index do |biker,index| -%>

	<% nick = biker[0] -%>
	<% dist = biker[1] -%>
	<% lp = index + 1 -%>
	
	<% if lp <= 3 %>
		<b><%= index +1 %>: <%= link_to nick, trips_nick_month_path(:month => 5, :nick => nick) -%> # <%= dist -%> km<br></b>
	<% else %>
		<% if lp == 4 %>
			<br>
		<% end %>
		<%= index +1 %>: <%= link_to nick, trips_nick_month_path(:month => 5, :nick => nick) -%> # <%= dist -%> km<br>
	<% end %>

<% end -%>

